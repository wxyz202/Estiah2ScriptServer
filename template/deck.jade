doctype html
html
    head
        style.
            table {
                border-collapse: collapse;
            }
            table td {
                border: 1px solid black;
            }
    body
        table
            tr
                td id
                td 名称
                td 数量
        
            each card in deck.cards
                tr
                    td= card.id
                    td= cardInfo[card.id]
                    td= card.num
        
            each scard in deck.scards
                tr
                    td= scard
                    td= cardInfo[scard]
                    td= "资源"
